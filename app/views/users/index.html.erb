<% provide(:title, 'All users') %>
<h1>All users</h1>
<style>
  /* unvisited link */
  a:link ,a:visited {
    color: white;
  }

  /* mouse over link */
  a:hover {
    color: gray;
  }

  /* selected link */
  a:active {
    color: red;
  }
</style>
<%= will_paginate %>

<ul class="users">
  <!--<div style="height:500px;width:500px;border:1px solid #ccc;font:16px/26px Georgia, Garamond, Serif;overflow:auto;"> -->

  <% @users.each do |user| %>
    <li>
      <%# gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
   <!--</div> -->
</ul>

<%= will_paginate %>